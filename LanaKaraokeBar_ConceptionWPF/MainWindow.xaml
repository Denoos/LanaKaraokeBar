<Window x:Class="LanaKaraokeBar_ConceptionWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanaKaraokeBar_ConceptionWPF"
        mc:Ignorable="d"
        Background="#FB9F9F"
        Title="KBL" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button Background="#FF0065" Click="ShowConcept_Click" Content="Основная концепция" Margin="20" Foreground="#FFBFD3"/>
            <Button Background="#FF0065" Click="ShowWireFrame_Click" Content="Типо WireFrame" Margin="20" Foreground="#FFBFD3"/>
            <Button Background="#FF0065" Click="ShowStructure_Click" Content="Структура работы" Margin="20" Foreground="#FFBFD3"/>
            <Button Background="#FF00A9" Click="Exit_Click" Content="Выход" Margin="20, 160, 20, 0" Foreground="#FFBFD3"/>
        </StackPanel>

        <Border Background="#651525" BorderThickness="15" CornerRadius="80"  Grid.Column="1">
            <Frame Margin="30" NavigationUIVisibility="Hidden" Content="{Binding CurrentPage}"/>
        </Border>
    </Grid>
</Window>
